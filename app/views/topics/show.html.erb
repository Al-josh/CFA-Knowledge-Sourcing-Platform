<p id="notice"><%= notice %></p>


<h1><%= @topic.title %></h1>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Created by</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.user.email %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) if current_user.admin? %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } if current_user.admin? %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
<%= link_to 'Back', :back %>
<%= link_to 'New Post', new_post_path %>

