<p id="notice"><%= notice %></p>

<h1 class="margin-bottom text-center"><%= @topic.title %></h1>
<button type="button" class="btn btn-default active center-block"><%= link_to 'New Post', new_post_path, class: 'topic-btn'%></button>


  <% @posts.each do |post| %>
  <div class="row">
    <div class="container">
      <div class="col-md-2">
        <div class="vote-buttons-posts">
          <%= link_to like_post_path(post), class: "like", method: :put do %>
          <button type="button" class="btn btn-info" aria-label="Left Align">
            <span class="glyphicon glyphicon-thumbs-up flyphicon-align-center" aria-hidden="true"></span>
            <span class="badge"> <%= post.get_upvotes.size %> </span>
          </button>
          <%end%>
          <%= link_to unlike_post_path(post), class: "unlike", method: :put do %>
          <button type="button" class="btn btn-info" aria-label="Left Align">
            <span class="glyphicon glyphicon-thumbs-down flyphicon-align-center" aria-hidden="true"></span>
            <span class="badge"> <%= post.get_downvotes.size %> </span>
          </button>
          <%end%>
        </div>
      </div>
      <div class="col-md-10">
        <div class="title-box-topic">
          <h3 class="box-text margin-bottom-post"><%= post.title %></h3>
          <li class="box-text topic-description-page">Created by <%= post.user.email %></li>
          <p class="text-right edit-buttons">
            <%= link_to 'Show', post, class: "text-right edit-buttons btn btn-primary" %>
            <%= link_to 'Edit |', edit_post_path(post) if current_user.admin? %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } if current_user.admin? %>
          </p>
        </div>
      </div>
      <% end %>


<br>
<%= link_to 'Back', topics_path, class: "btn btn-default" %>
